<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoazul"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity2">
    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="91dp"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="start"
        android:scaleType="fitXY"

        app:srcCompat="@drawable/klipartz_com" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="Encuesta"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="Selecciona la que consideres que cumple la app"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <CheckBox

            android:id="@+id/Cb1"
            android:layout_width="wrap_content"
            android:textColor="@color/white"

            android:text="Interesante"
            android:layout_height="wrap_content"/>
        <CheckBox
        android:id="@+id/Cb2"
        android:layout_width="wrap_content"
        android:textColor="@color/white"

        android:text="Útil"
        android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/Cb3"
            android:layout_width="wrap_content"
            android:textColor="@color/white"

            android:text="Divertida"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/Cb4"
            android:layout_width="wrap_content"
            android:textColor="@color/white"

            android:text="Buena Calidad"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/Cb5"
            android:layout_width="wrap_content"
            android:textColor="@color/white"

            android:text="Buena Estetica"
            android:layout_height="wrap_content"/>







    </LinearLayout>
    <Button
        android:id="@+id/BtnGenerarResultados"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:text="Generar Resultados"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lblResultados"
        android:text="Resultados"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/white"
        android:id="@+id/EtResultado"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <TextView
        android:id="@+id/lblAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Christofer González"/>






</LinearLayout>