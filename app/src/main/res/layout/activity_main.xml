<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/fondojpg"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btnSalir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pngegg__1_"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Etnombre"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColorHint="@color/white"
                android:layout_gravity="center"

                android:hint="Nombre">

            </EditText>
            <EditText
                android:id="@+id/Etapellido"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text=""
                android:textColorHint="@color/white"

                android:layout_gravity="center"
                android:hint="Apellido">

            </EditText>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Fecha"
                android:textSize="20dp"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/BtnDatePicker"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:textSize="20dp"

                style="?android:spinnerStyle"
                />

            <TextView
                android:id="@+id/lblTitulo"
                android:textSize="20dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Tipos de arte"></TextView>
            <RadioButton
                android:id="@+id/RbTema1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Arte moderno"
                android:layout_gravity="center"/>
            <RadioButton
                android:id="@+id/RbTema2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Arte abstracto"
                android:layout_gravity="center"/>
            <RadioButton
                android:id="@+id/RbTema3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Arte gotico"
                android:layout_gravity="center"/>
            <RadioButton
                android:id="@+id/RbTema4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arte Griego"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            <RadioButton
                android:id="@+id/RbTema5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arte Renacentista"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
            <ImageButton
                android:id="@+id/BtnImgs"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/lblAutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    android:text="Christofer GonzÃ¡lez"/>
            <ImageButton
                android:id="@+id/btnSiguiente"
                android:layout_width="91dp"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="120dp"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:rotation="180"
                app:srcCompat="@drawable/klipartz_com" />


        </LinearLayout>





        </LinearLayout>

    </ScrollView>



</LinearLayout>